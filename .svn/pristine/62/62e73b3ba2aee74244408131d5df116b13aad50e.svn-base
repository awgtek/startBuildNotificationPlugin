[#include "NotificationCommonsText.ftl" ]
[#include "NotificationCommonsHtml.ftl" ]

[@templateOuter baseUrl=baseUrl statusMessage=statusMessage]
    [@displayTriggerReason startDateTime=startDateTime]
        [@buildNotificationTitleText build buildNumber/]
    [/@displayTriggerReason]
    [@showActions]
        [@addAction "View Online" "${baseUrl}/browse/${buildKey}" true/]
        [@addAction "Add Comments" "${baseUrl}/browse/${buildKey}?commentMode=true"/]
        [@addAction "View Artifacts" "${baseUrl}/browse/${buildKey}/artifact"/]
        [@addAction "Download Logs" "${baseUrl}/browse/${buildKey}/log"/]
    [/@showActions]
[/@templateOuter]
